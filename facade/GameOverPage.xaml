<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="facade.GameOverPage"
             Title="GameOverPage">
    <VerticalStackLayout VerticalOptions="Fill" HorizontalOptions="Fill">

        <Label
            x:Name="ResultLabel"
            Text="{Binding Result}"
            FontSize="Title"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Padding="100"/>
        <StackLayout HorizontalOptions="Fill" BackgroundColor="#facade" Padding="60" Grid.Row="0" Orientation="Horizontal"  >

            <Label Text="#" FontSize="60" VerticalOptions="Center" />
            <Label Text="FACADE"
           FontSize="60"
           VerticalOptions="Center"
           />

        </StackLayout>

        <Button WidthRequest="150" BackgroundColor="Grey" Text="Play Again" TextColor="Black" FontSize="22" Margin="50" Clicked="Button_Clicked">
        </Button>
    </VerticalStackLayout>
</ContentPage>
